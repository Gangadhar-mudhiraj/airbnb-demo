<%layout( "layouts/boilerplate.ejs" )%>


    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit listing</h3>
            <form novalidate class="needs-validation" action="/listings/<%=listing._id%>?_method=PUT" method="POST"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title">Title</label>
                    <input id="title" type="text" value="<%=listing.title%>" name="listing[title]" class="form-control"
                        required>
                    <div class="invalid-feedback">Title can't be empty</div>
                </div>
                <div class="mb-3"><label for="description">Description</label>
                    <textarea required id="textarea" type="text" placeholder="Enter description"
                        name="listing[description]" class="form-control"><%=listing.description%></textarea>
                </div>
                <div class="mb-3">
                    Original Image <br>
                    <img src="<%=originalImageUrl%>" alt="DP">
                </div>
                <div class="mb-3"><label for="img">Upload new Image</label>
                    <input id="img" type="file" required name="listing[image]" class="form-control">
                    <div class="invalid-feedback">url is required</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4"> <label for="price">Price</label>
                        <input id="price" type="number" required name="listing[price]" value="<%=listing.price%>"
                            class="form-control">
                        <div class="invalid-feedback">please enter a valid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country">Country</label>
                        <input required id="country" type="text" value="<%=listing.country%>" name="listing[country]"
                            class="form-control">
                        <div class="invalid-feedback">country must be valid</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location">Location</label>
                    <input id="location" required type="text" value="<%=listing.location%>" name="listing[location]"
                        class="form-control">
                    <div class="invalid-feedback">location is required</div>
                </div>
                <button class="btn btn-dark add-btn mt-3">add</button>
            </form>
        </div>
    </div>